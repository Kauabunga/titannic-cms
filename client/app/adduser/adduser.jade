div(ng-include='"components/navbar/navbar.html"')

.add-user-container(ng-class='{"fade-in": fadeIn}')
  header#banner.hero-unit
    .container
      h3 Create User
      p Enable a new user to use the cms
        br
        | &nbsp;

  .container
    .col-sm-12
      form.form(name='userForm', ng-submit='createUser()', novalidate)

        .row
          .col-sm-6.form-group.col-sm-offset-2
            label Name
            input.form-control(type='text', name='name', ng-model='user.name', required='')
          .col-sm-2.form-group
            label Role
            select.form-control(type='text', name='role', required=''
            placeholder='User role',
            ng-model='user.role',
            ng-options="role for role in roles")


        .row
          .col-sm-8.form-group.col-sm-offset-2
            label Email
            input.form-control(type='email', name='email', ng-model='user.email', required='')

        .row
          .col-sm-12
            button.btn.btn-create(type='submit') Create User


